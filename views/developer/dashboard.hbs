{{> navbar}}
<div class="wrapper-md">
    <div class="container py-4">
        <div class="mb-3">
            <h5 class="title-text">Applications</h5>
        </div>
        <div class="row">
            <div class="col-12 col-sm-6 col-md-4 mb-3">
                <a role="button" class="card rounded-card app-card" data-toggle="modal" data-target="#createAppForm">
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <div class="text-center">
                            <p><i class="fas fa-plus"></i></p>
                            <p> Create App</p>
                        </div>
                    </div>
                </a>
            </div>
            {{#each apps.results as |app|}}
            <div class="col-12 col-sm-6 col-md-4 mb-3">
                <a href="/client/apps/{{app.id}}" role="button" class="card rounded-card app-card">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h5>{{app.name}}</h5>
                            <p class="text-muted small">{{dateFormat app.createdAt "MMMM Do YYYY"}}</p>
                        </div>

                        <div class="text-muted">
                            <i class="fas fa-code"></i>
                        </div>
                    </div>
                </a>
            </div>
            {{/each}}
        </div>
    </div>
</div>

{{!-- App Form --}}
<div class="modal fade" id="createAppForm" backdrop="static">
    <div class="modal-dialog rounded-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Create App</h5>
                <a href="javascript: void(0)" class="close" data-dismiss="modal">
                    <i class="fas fa-times"></i>
                </a>
            </div>

            <div class="modal-body">
                {{> flashMessage}}
                <form action="/client/apps" method="post" class="m-0">
                    <div class="mb-3">
                        <input type="text" name="name" placeholder="App Name" class="form-control">
                    </div>

                    <div class="mb-3">
                        <input type="text" name="redirectURL" placeholder="Redirect URL" class="form-control">
                        <span class="small text-muted">
                            After user is authenticated your app will be redirected to this
                            URL
                        </span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-full">
                            Create App
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{!-- App Form --}}

{{#if (equals tab 'createApp')}}
<script>
    $(function () {
        $("#createAppForm").modal("show")
    })
</script>
{{/if}}
{{> footer}}
