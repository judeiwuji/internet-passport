{{!-- App Form --}}
<div class="modal fade" id="createAppForm" backdrop="static">
    <div class="modal-dialog rounded-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Create App</h5>
                <a href="javascript: void(0)" class="close" data-dismiss="modal">
                    <i class="fas fa-times"></i>
                </a>
            </div>

            <div class="modal-body">
                <form action="" class="m-0">
                    <div class="mb-3">
                        <input type="text" name="name" placeholder="App Name" class="form-control">
                    </div>

                    <div class="mb-3">
                        <input type="text" name="name" placeholder="Redirect URL" class="form-control">
                        <span class="small text-muted">
                            After user is authenticated your app will be redirected to this
                            URL
                        </span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-full">
                            Create App
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
