{{> navbar}}
<div class="wrapper-md">
    <div class="container py-5">
        <div class="row">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 mx-auto">
                <div class="text-center mb-3">
                    <h5 class="title-text">Account Profile</h5>
                </div>
                <div class="card rounded-card border-0 mb-3">
                    <div class="card-body">
                        <form action="/developer/signup" method="post" class="m-0">
                            <div class="mb-3">
                                <input type="text" name="fullname" placeholder="Fullname" class="form-control" />
                            </div>

                            <div class="mb-3">
                                <input type="text" name="company" placeholder="Company Name" class="form-control" />
                            </div>

                            <div class="mb-3">
                                <select name="role" class="form-control">
                                    <option value="">Select your role</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <input type="email" class="form-control" placeholder="example@email.com" readonly>
                            </div>

                            <div class="text-center mb-3">
                                <button type="submit" class="btn btn-full">
                                    Save
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="text-center">
                    <button class="btn btn-full" type="button" data-toggle="modal" data-target="#changePasswordModal">
                        Change Password
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

{{!-- Reset password modal --}}
<div class="modal" id="changePasswordModal" data-backdrop="static">
    <div class="modal-dialog modal-sm rounded-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    Change Password
                </h5>
                <button class="close" data-dismiss="modal">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <div class="modal-body">
                <form action="">
                    <div class="mb-4">
                        <input type="password" class="form-control" placeholder="New Password" name="newPassword">
                    </div>

                    <div class="mb-4">
                        <input type="password" class="form-control" placeholder="Confirm Password"
                            name="confirmPassword">
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-full">
                            Confirm
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{!-- Reset password modal --}}
