<div class="wrapper d-flex justify-content-center align-items-center">
    <div class="container">
        <div class="row">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 mx-auto">
                <div class="card rounded-card login-card">
                    <div class="card-body">
                        <!-- Logo -->
                        <a href="/" class="link">
                            <div class="d-flex justify-content-center align-tems-center mb-3 logo-pane">
                                <img src="imgs/logo.png" alt="Logo" class="logo mr-1" />
                                IP
                            </div>
                        </a>
                        <!-- Logo -->

                        {{#if isStateValid}}
                        {{#if data.codeSent}}
                        <div class="text-center mb-4">
                            <p class="text-muted">
                                Verify your account email by entering the 6 digit code we sent to email
                            </p>
                        </div>

                        <form action="/verifyEmail" method="post" class="mb-4">
                            <div class="d-flex justify-content-center code-digit-pane mb-4">
                                <input type="text" class="form-control" name="code[]" maxlength="1">
                                <input type="text" class="form-control" name="code[]" maxlength="1">
                                <input type="text" class="form-control" name="code[]" maxlength="1">
                                <input type="text" class="form-control" name="code[]" maxlength="1">
                                <input type="text" class="form-control" name="code[]" maxlength="1">
                                <input type="text" class="form-control" name="code[]" maxlength="1">
                            </div>

                            <input type="hidden" name="state" value="{{state}}">

                            <div class="text-center">
                                <button type="submit" class="btn btn-full">
                                    Verify
                                </button>
                            </div>
                        </form>

                        <div class="text-center">
                            <form action="/resend/verificationCode" method="post" class="m-0">
                                <input type="hidden" value="{{data.email}}" name="email">
                                <div class="text-center">
                                    <button class="btn btn-light btn-sm">Resend code</button>
                                </div>
                            </form>
                        </div>
                        {{else}}
                        {{!-- Code not sent --}}
                        <div class="py-3">
                            <h5 class="text-center font-weight-bold">Connect Error</h5>
                        </div>
                        <p>Sorry, we encountered a problem while sending the code, please try again</p>
                        <form action="/resend/verificationCode" method="post">
                            <input type="hidden" value="{{data.email}}" name="email">
                            <div class="text-center">
                                <button class="btn btn-full">Resend Code</button>
                            </div>
                        </form>
                        {{!-- Code not sent --}}
                        {{/if}}
                        {{else}}
                        <div class="text-center py-3">
                            <p class="text-muted">Sorry, either this link is broken or your session has expired</p>
                            <a href="/" class="btn btn-full">
                                Go back home
                            </a>
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
